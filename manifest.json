{
  "manifest_version": 2,
  "name": "MD CLip",
  "version": "1.0.0",
  "description": "Clips a page in Markdown that can then easily be pasted.",
  "browser_specific_settings": {
    "gecko": {
      "id": "md-clip@berjon.com"
    }
  },
  "icons": {
    "32": "icons/clip.svg"
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "icons/clip.svg",
    "default_title": "MD Clip",
    "default_popup": "popup.html"
  }
}
